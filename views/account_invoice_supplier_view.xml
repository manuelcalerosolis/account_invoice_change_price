<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_invoice_supplier_purchase_form" model="ir.ui.view">
        <field name="name">account.invoice.supplier.purchase.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="groups_id" eval="[(4,ref('purchase.group_purchase_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='currency_id']" position="after">
<!--                <button name="%(account_invoice_change_price.select_sale_price_wizard)d" string="Price" type="action"-->
<!--                        icon="fa-phone text-success"/>-->
                <button name="action_show_wizard" string="Sales Prices" type="object" icon="fa-money text-success"/>
            </xpath>
            <xpath expr="//page[@name='other_info']" position='before'>
	    	    <page string="Costs">
                    <field context="{'type': type, 'journal_id': journal_id}" name="invoice_price_line_ids">
                        <tree string="Costs lines" editable="bottom">
                            <field name="product_id"/>
                            <field name="price_unit"/>
                        </tree>
                    </field>
                </page>
	        </xpath>
        </field>
    </record>

</odoo>